        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_5sdp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/cell_album_pic" />

</LinearLayout>